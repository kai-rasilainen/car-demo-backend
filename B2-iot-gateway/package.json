{
  "name": "iot-gateway-microserver",
  "version": "1.0.0",
  "description": "IoT gateway and microserver for car data collection and command relay",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.18.0",
    "ws": "^8.14.0",
    "mongodb": "^6.0.0",
    "redis": "^4.6.0",
    "mqtt": "^5.0.0",
    "dotenv": "^16.3.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ws": "^8.14.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "testMatch": ["**/tests/**/*.js", "**/*.test.js", "**/*.spec.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}